<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.vitamio.mediaplayer.view.DragLeftLayout
        android:id="@+id/drag_left_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:DragLeft_contentViewId="@+id/fl_content"
        app:DragLeft_drawViewId="@+id/drag_view">
        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e0e71e"></FrameLayout>
        <TextView
            android:id="@+id/drag_view"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:background="#ed72c8"
            android:gravity="center"
            android:text="drag_me" />
    </com.vitamio.mediaplayer.view.DragLeftLayout>


</RelativeLayout>