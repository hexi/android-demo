<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_show_hide_comment_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_marginBottom="146dp">

    <RelativeLayout
        android:id="@+id/rl_hide_comment"
        android:layout_width="144dp"
        android:layout_height="94dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="146dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_close_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_full_live_close_comment"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="@string/show_or_hide_comment_back"
            android:textColor="@android:color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_show_comment"
        android:layout_width="144dp"
        android:layout_height="94dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="146dp"
        android:layout_marginRight="-144dp">

        <TextView
            android:id="@+id/tv_comment_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_full_live_open_comment"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:text="@string/show_or_hide_comment_open"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_comment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_comment_tip"
            android:layout_alignTop="@+id/tv_comment_tip"
            android:layout_marginRight="5dp"
            android:layout_marginTop="-5dp"
            android:background="@drawable/bg_full_live_comment_number"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/show_or_hide_comment_number"
            android:textColor="@android:color/white"
            android:textSize="11sp" />

    </RelativeLayout>
</RelativeLayout>