<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_number_setting_container"
    android:layout_width="match_parent"
    android:layout_height="34dp"
    android:background="@drawable/number_setting_llbg"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/minus"
        android:layout_width="34dp"
        android:layout_height="34dp">

        <ImageView
            android:id="@+id/iv_minus_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>


    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#d8d8d8" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="@drawable/trade_setting_enabled_edit_text_color_selector"
        android:textColorHint="@drawable/trade_setting_enabled_text_color_selector"
        android:textSize="16sp" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#d8d8d8" />

    <RelativeLayout
        android:id="@+id/add"
        android:layout_width="34dp"
        android:layout_height="34dp">

        <ImageView
            android:id="@+id/iv_plus_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</LinearLayout>