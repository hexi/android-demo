<?xml version="1.0" encoding="utf-8"?>
<github.chenupt.dragtoplayout.DragTopLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drag_top_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:dtlOverDrag="false">

    <LinearLayout
        android:id="@+id/top_view_container"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Header View"
            android:textSize="30sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</github.chenupt.dragtoplayout.DragTopLayout>
